{
  "_description": "Default configuration for PharmPapp MCP scripts",
  "_version": "1.0.0",

  "general": {
    "random_state": 42,
    "n_jobs": -1,
    "verbose": true
  },

  "paths": {
    "models_dir": "models",
    "data_dir": "examples/data",
    "output_dir": "results",
    "temp_dir": "temp"
  },

  "molecule_processing": {
    "standardize_molecules": true,
    "remove_salts": true,
    "neutralize_charges": true,
    "validate_structures": true
  },

  "descriptor_calculation": {
    "use_rdkit": true,
    "include_3d": false,
    "max_conformers": 1,
    "timeout_seconds": 30
  },

  "model_training": {
    "cross_validation": true,
    "test_size": 0.2,
    "scale_features": true,
    "feature_selection": false
  },

  "quality_control": {
    "min_molecules": 3,
    "max_molecules": 10000,
    "min_descriptors": 10,
    "max_missing_rate": 0.2
  },

  "output": {
    "format": "csv",
    "compression": null,
    "decimal_places": 3,
    "include_metadata": true
  },

  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_logging": false
  },

  "demo_data": {
    "create_if_missing": true,
    "overwrite_existing": false,
    "sample_size": 3
  }
}