{
  "_description": "Configuration for cyclic peptide permeability prediction",
  "_source": "Extracted from examples/use_case_1_predict_permeability.py",

  "model": {
    "test_size": 0.2,
    "random_state": 42,
    "n_jobs": -1,
    "cross_validation": true,
    "scale_features": true
  },

  "algorithms": {
    "random_forest": {
      "n_estimators": 100,
      "max_depth": null,
      "min_samples_split": 2,
      "min_samples_leaf": 1
    },
    "svr": {
      "kernel": "rbf",
      "gamma": "scale",
      "C": 1.0
    },
    "lightgbm": {
      "n_estimators": 100,
      "learning_rate": 0.1,
      "max_depth": -1
    }
  },

  "data_preprocessing": {
    "handle_missing_values": "mean",
    "min_descriptor_coverage": 0.8,
    "remove_constant_features": true,
    "feature_selection": false
  },

  "validation": {
    "calculate_metrics": true,
    "metrics": ["r2", "rmse", "mae"],
    "save_predictions": true,
    "save_residuals": true
  },

  "output": {
    "format": "csv",
    "include_metadata": true,
    "include_confidence": false,
    "decimal_places": 3
  },

  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(levelname)s - %(message)s"
  }
}